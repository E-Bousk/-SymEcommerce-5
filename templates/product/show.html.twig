{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-5">
            <img class="img-fluid" src="{{ asset('uploads/images/')}}{{ product.illustration }}" alt="image {{ product.name }}">
        </div>
        <div class="my-auto col-md-7">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} &euro;</span>
            <hr>
            <p>{{ product.description }}</p>
            <a class="btn btn-primary" href="{{ path('app_cart_add', {id: product.id}) }}">Ajouter au panier</a>
        </div>
    </div>
    
{% endblock %}
