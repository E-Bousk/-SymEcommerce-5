{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-5">
            <img class="img-fluid" src="{{ asset('uploads/images/')}}{{ product.illustration }}" alt="image {{ product.name }}">
        </div>
        <div class="my-auto col-md-7">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} &euro;</span>
            <hr>
            <p>{{ product.description }}</p>
            <a class="btn btn-primary" href="{{ path('app_cart_add', {id: product.id}) }}">Ajouter au panier</a>
        </div>
    </div>
    <hr>
    <h1 class="h3">Nos meilleures ventes</h1>
    <p>DÃ©couvrez nos articles les plus vendus</p>
    <div class="row">
        {% for product in products %}
            <div class="col-md-3">
                {{ include('_partial/single_product.html.twig') }}
            </div>
        {% endfor %}
    </div>
    
{% endblock %}
