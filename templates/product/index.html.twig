{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h3>Nos produits</h3>
            <div class="row products-container">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="products-item text-center">
                            <a href="{{ path('app_product', {slug: product.slug}) }}"><img class="img-fluid" src="{{ asset('uploads/images/')}}{{ product.illustration }}" alt="image {{ product.name }}"></a>
                            <h5>{{ product.name }}</h5>
                            <span class="products-subtitle">{{ product.subtitle }}</span>
                            <span class="products-price">{{ (product.price / 100)|number_format(2, ',', '.') }} &euro;</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
{% endblock %}
