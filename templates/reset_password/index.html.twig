{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="block-small">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info">
                {{ message }}
            </div>
        {% endfor %}
        <form method="post">
            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
            <label for="inputEmail">Votre e-mail</label>
            <input type="email" value="" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre adresse e-mail" required autofocus>
        
            <button class="mt-3 btn btn-info btn-block btn-lg" type="submit">
                Valider
            </button>
            <hr>
            <p class="text-center">ou souhaitez-vous <a href="{{ path('app_login') }}">vous connecter</a></p>
        </form>
    </div>
{% endblock %}
