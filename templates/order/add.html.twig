{% extends 'base.html.twig' %}

{% block title %}Paiement de ma commande{% endblock %}

{% block body %}
    <h1>Récapitulatif</h1>
    <p>Veuillez vérifiez vos informations avant de payer votre commande</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <strong>Adresse de livaison :</strong>
            <br>
            <div class="mt-4 form-check">
                {{ delivery|raw }}
            </div>
            <hr>
            <strong> Transporteur choisi :</strong>
            <br>
            <div class="form-check">
                {{ carrier.name }} : {{ carrier.price|number_format(2, ',', '.') }} &euro;
                <br>
                {{ carrier.description }}
            </div>
            
        </div>
        <div class="col-md-6">
            <div class="text-center order-title">
                <b>Ma commande :</b>
            </div>
            <div class="order-summary">
                {% set total = null %}
                {% for key, p in cart %}
                    <div class="row{% if key > 0 %} mt-2{% endif %}">
                        <div class="col-2">
                            <img height="75px" src="{{ asset('uploads/images/')}}{{ p.product.illustration }}" alt="image {{ p.product.name }}">
                        </div>
                        <div class="col-8 my-auto text-center">
                            <b>{{ p.product.name }}</b>
                            <br>
                            <small>
                                {{ p.product.subtitle }}
                                <br>
                                x {{ p.quantity }}
                            </small>
                        </div>
                        <div class="col-2 my-auto">
                            {{ ((p.product.price * p.quantity) / 100)|number_format(2, ',', '.') }} &euro;
                        </div>
                    </div>
                    {% set total = total + (p.product.price * p.quantity) %}
                {% endfor %}
            </div>

            <hr>
            <strong>Sous-total : </strong>{{ (total / 100)|number_format(2, ',', '.') }} &euro;
            <br>
            <strong>Livraison : </strong>{{ carrier.price|number_format(2, ',', '.') }} &euro;
            <hr>
            <strong>Total : </strong>{{ ((total / 100) + carrier.price)|number_format(2, ',', '.') }} &euro;
            <a class="mt-3 btn btn-success btn-block" href="">Payer | {{ ((total / 100) + carrier.price)|number_format(2, ',', '.') }} &euro;</a>
        </div>
    </div>
{% endblock %}
